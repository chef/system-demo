{
    "name":"list_process_upload_s3",
    "description": "Lists processes on a server and uploads them to s3",
    "immediate": true,
    "exceptionRules":[],
    "target": {
            "executionType": "sequential",
            "groups":[
                {
                    "timeoutSeconds": 240, 
                    "batchSize": { "type": "number", "value": 1 },
                    "distributionMethod": "batching",
                    "successCriteria": [ { "numRuns": { "type": "percent", "value": 100 }, "status": "success" }
                    ],
                    "nodeListType":"nodes",
                    "nodeIdentifiers":[
                        "--NODE1--"
                    ] 
                }
            ]
        },
    "actions": {
            "accessMode": "agent",
            "steps": 
            [
                {
                    "stepNumber": 1,
                    "interpreter": {
                        "name": "chef/courier-interpreter/os/shell"
                    },
                    "command": [
                        "ps > process.txt",
                        "aws s3 cp process.txt s3://demo-artifacts-8349",
                        "rm process.txt",
                        "commit | true"    
                    ],
                    "inputs": {},
                    "expectedInputs": { },
                    "stepOutputFieldRules": {},
                    "retryCount": 2,
                    "failureBehavior": {
                        "action": "retryThenFail",
                        "retryBackoffStrategy": { "name": "none", "delaySeconds": 0, "arguments": [] }
                    },
                    "limits": {},
                    "conditions": []
                }
            ]
        },
    "timeoutSeconds": 300
}